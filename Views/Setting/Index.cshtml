@model User
@using Microsoft.AspNetCore.Http

<div class="update-container">
    <div class="update-header">
        <h4><span class="icon-update-header fa fa-user" style="color: #008080"> Kullanıcı Ayarları</span></h4>
    </div>
    <br />
    <div id="settingViewBag">
        @if (ViewBag.Message != null)
        {
            <br /><span style="color:red;">@ViewBag.Message</span>
        }
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <div class="update-box">
                @using (Html.BeginForm("UpdateUser", "Settings", FormMethod.Post, new { @id = "updateUser" }))
                {
                    <div class="form-group ">
                        @Html.LabelFor(n => n.Name, "İsim", new { @class = "mb-1 text-color" })
                        @Html.TextBoxFor(n => n.Name, new { @class = "form-control", placeholder = "İsminiz", required="required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(n => n.LastName, "Soyisim", new { @class = "mb-1 text-color" })
                        @Html.TextBoxFor(n => n.LastName, new { @class = "form-control", placeholder = "Soyisminiz", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(n => n.Birthday, "Doğum Tarihi", new { @class = "mb-1 text-color", required = "required" })
                        <input type="date" name="username" id="username" class="form-control date-time-picker">
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(n => n.EMail, "Mail", new { @class = "mb-1 text-color" })
                        @Html.TextBoxFor(n => n.EMail, new { @class = "form-control", placeholder = "Emailiniz", required = "required", type="email" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(n => n.Password, "Parola", new { @class = "mb-1 text-color" })
                        @Html.PasswordFor(n => n.Password, new { @class = "form-control", placeholder = "Parolanız", required = "required", type="password" })
                        @Html.HiddenFor(l => l.UserId)
                    </div>
                    <div class="d-flex justify-content-between mt-2rem">
                        <button type="button" class="goBack btn">Geri Dön</button>
                        <button class="updateUserRecord btn" type="submit">Kaydet</button>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
