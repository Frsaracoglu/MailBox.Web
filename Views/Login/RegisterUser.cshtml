@{ Layout = null;}
@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MailBox.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="container-fluid">
                <div class="row main-content bg-success text-center">
                    <div class="col-md-4 text-center company__info">
                        <span class="company__logo"><h2><span class="fa fa-android"></span></h2></span>
                        <h4 class="company_title">Your Company Logo</h4>
                    </div>
                    <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
                        <div class="container-fluid">
                            <div class="row">
                                <h3 style="color: #008080">Sign Up</h3>
                            </div>
                            <br />
                            @if (ViewBag.Message != null || ViewBag.Alert != null)
                            {
                                <br /><span style="color:red;">@ViewBag.Message</span>
                                <br /><span style="color:red;">@ViewBag.Alert</span>
                            }
                            <br />
                            <div class="user-register-form">
                                @using (Html.BeginForm("RegisterUser", "Login", FormMethod.Post, new { @id = "userRegisterForm" }))
                                {
                                    <div class="row">
                                        @Html.TextBoxFor(n => n.Name, new { @class = "form__input", placeholder = "Name", required = "required", minlength = "3" })
                                    </div>
                                    <div class="row">
                                        @Html.TextBoxFor(n => n.LastName, new { @class = "form__input", placeholder = "Lastname", required = "required", minlength = "3" })
                                    </div>
                                    <div class="row">
                                        <input type="date" name="Birthday" id="Birthday" class="form__input date-time-picker" placeholder="Birthday" required>
                                    </div>
                                    <div class="row">
                                        @Html.TextBoxFor(n => n.EMail, new { @class = "form__input", placeholder = "Email", @type = "email", required = "required" })
                                    </div>
                                    <div class="row">
                                        @Html.PasswordFor(n => n.Password, new { @class = "form__input", placeholder = "Password", required = "required", minlength = "3" })
                                    </div>
                                    <div class="register-inputs">
                                        <input type="submit" value="Submit" class="btn" id="userRegisterBtn">
                                        <input type="button" value="Geri" style="width:33%" class="goBack btn btn-primary">
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
